<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="title">
    <h1>Lists</h1>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
      <%= link_to list.name, list_path(list) %>
      <%= link_to list_path(list), method: :delete, data: {confirm: 'Are you sure you want to delete this movie?'} do %>
        <i class="fas fa-dumpster"></i>
      <% end  %>
    <% end %> 
  </div>
  <%= link_to 'New List', new_list_path, class:"button" %>
</div>
