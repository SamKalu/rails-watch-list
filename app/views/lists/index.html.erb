<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="title">
    <h1>Lists</h1>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <% name_words = list.name.split %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?<%= name_words[0] %>,<%= name_words[1] %>)">
        <%= link_to list.name, list_path(list) %>
        <%= link_to list_path(list), method: :delete, data: {confirm: 'Are you sure you want to delete this movie?'} do %>
          <i class="fas fa-dumpster"></i>
        <% end  %>
      </div>  
    <% end %> 
  </div>
  <%= link_to 'New List', new_list_path, class:"button" %>
</div>
